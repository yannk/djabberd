#!/usr/bin/perl

use strict;
use lib 'lib';
use DJabberd;
use Getopt::Long;
use FindBin qw($Bin);
use vars qw($DEBUG);
$DEBUG = 0;

my ($daemonize);

my $conffile = "/etc/djabberd/djabberd.conf";

Getopt::Long::GetOptions(
                         'd|daemon'     => \$daemonize,
                         'debug=i'      => \$DEBUG,
                         'conffile=s'   => \$conffile,
                         );


my $server = DJabberd->new(
                           daemonize => $daemonize
                           );

$server->load_config($conffile);

$server->run;
